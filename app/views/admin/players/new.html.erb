<div class="container">
    <h1 class="display-3">Add Player</h1>

    <%= form_for([:admin, @player]) do |f| %>
        <div class="form-group row">
            <label for="player_url" class="col-sm-2 col-form-label">URL</label>
            <div class="col-sm-10">
                <%= f.text_field :player_url, :placeholder => 'URL', class: "form-control" %>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-10">
                <%= f.submit "Submit", class: "btn btn-primary" %>
            </div>
        </div>
    <% end %>
</div>