<%= form_for(projection) do |f| %>
    <div class="form-group row">
        <label for="field_goal_percentage" class="col-sm-2 col-form-label">FG%</label>
        <div class="col-sm-10">
			<%= f.text_field :field_goal_percentage, :placeholder => 'FG%', class: "form-control" %>
		</div>
    </div>
    <div class="form-group row">
        <label for="free_throw_percentage" class="col-sm-2 col-form-label">FT%</label>
        <div class="col-sm-10">
			<%= f.text_field :free_throw_percentage, :placeholder => 'FT%', class: "form-control" %>
		</div>
    </div>
    <div class="form-group row">
        <label for="three_point_per_game" class="col-sm-2 col-form-label">3PM</label>
        <div class="col-sm-10">
			<%= f.text_field :three_point_per_game, :placeholder => '3PM', class: "form-control" %>
		</div>
    </div>
    <div class="form-group row">
        <label for="points_per_game" class="col-sm-2 col-form-label">PTS</label>
        <div class="col-sm-10">
			<%= f.text_field :points_per_game, :placeholder => 'PTS', class: "form-control" %>
		</div>
    </div>
    <div class="form-group row">
        <label for="rebounds_per_game" class="col-sm-2 col-form-label">REBS</label>
        <div class="col-sm-10">
			<%= f.text_field :rebounds_per_game, :placeholder => 'REBS', class: "form-control" %>
		</div>
    </div>
    <div class="form-group row">
        <label for="assists_per_game" class="col-sm-2 col-form-label">ASTS</label>
        <div class="col-sm-10">
			<%= f.text_field :assists_per_game, :placeholder => 'ASTS', class: "form-control" %>
		</div>
    </div>
    <div class="form-group row">
        <label for="steals_per_game" class="col-sm-2 col-form-label">STLS</label>
        <div class="col-sm-10">
			<%= f.text_field :steals_per_game, :placeholder => 'STLS', class: "form-control" %>
		</div>
    </div>
    <div class="form-group row">
        <label for="blocks_per_game" class="col-sm-2 col-form-label">BLKS</label>
        <div class="col-sm-10">
			<%= f.text_field :blocks_per_game, :placeholder => 'BLKS', class: "form-control" %>
		</div>
    </div>
    <div class="form-group row">
        <label for="turnovers_per_game" class="col-sm-2 col-form-label">TOS</label>
        <div class="col-sm-10">
			<%= f.text_field :turnovers_per_game, :placeholder => 'TOS', class: "form-control" %>
		</div>
    </div>
    <div class="form-group row">
		<div class="col-sm-10">
			<%= f.submit "Create Projection", class: "btn btn-primary" %>
		</div>
	</div>
<% end %>
